{
    "manifest_version": 3,
    "name": "ReactJS Chrome Extension Boilerplate",
    "description": "Ready to go",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.example.com/*"],
        "js": ["contentScript.js"]
      }
    ],
    "permissions": [
      "activeTab",
      "storage"
    ],
    "options_page": "options.html"
  }